{
    "name": "RM Assistant",
    "version": "0.1",
    "description": "Awesome extension",
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "16": "icons/ico.png",
        "64": "icons/ico.png"
    },
    "browser_action": {
        "default_icon": {
            "64": "icons/ico.png"
        },
        "default_title": "Redmine Assistant"
    },
    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },

    "permissions": [
        "notifications",
        "storage",
        "tabs",
        "https://rm.innomdc.com/*"
    ]
}